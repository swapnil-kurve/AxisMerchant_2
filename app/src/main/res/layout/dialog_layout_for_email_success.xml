<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16sp">

    <com.nxg.axismerchant.custom.CustomTextViewMedium
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_sent_success"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:maxLines="2"/>

    <com.nxg.axismerchant.custom.CustomTextViewHeavy
        android:id="@+id/txtEmailID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"/>

    <com.nxg.axismerchant.custom.CustomTextViewHeavy
        android:id="@+id/txtDone"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/imgNotification"
        android:layout_toRightOf="@+id/imgBack"
        android:background="@color/metal_gray"
        android:gravity="center"
        android:padding="8dp"
        android:text="Done"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

</LinearLayout>