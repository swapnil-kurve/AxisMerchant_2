<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16sp">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.axismerchant.custom.CustomTextViewMedium
            android:id="@+id/txtResponseStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/success"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="@dimen/heading_big" />

        <ImageView
            android:id="@+id/imgResponse"
            android:layout_width="@dimen/toolbar_img_width"
            android:layout_height="@dimen/toolbar_img_height"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/happiness" />

        <com.axismerchant.custom.CustomTextViewMedium
            android:id="@+id/txtRequestNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/request_number"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_size" />

        <com.axismerchant.custom.CustomTextViewMedium
            android:id="@+id/txtDone"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/imgNotification"
            android:layout_toRightOf="@+id/imgBack"
            android:background="@drawable/button_layout"
            android:gravity="center"
            android:padding="5dp"
            android:text="Done"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>
</LinearLayout>