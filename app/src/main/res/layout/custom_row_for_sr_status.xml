<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <com.axismerchant.custom.CustomTextViewLightBold
        android:id="@+id/txtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgStatusSMS"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:text="On 23rd Jan 2016"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/heading_small" />

    <com.axismerchant.custom.CustomTextViewLight
        android:id="@+id/txtDocketIDTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Docket ID"
        android:textColor="@color/stroke_gray"
        android:textSize="@dimen/subtitle_size" />

    <com.axismerchant.custom.CustomTextViewLight
        android:id="@+id/txtDocketID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:text="354231354231354231"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitle_size" />

    <com.axismerchant.custom.CustomTextViewLight
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:text="Problem Code"
        android:textColor="@color/stroke_gray"
        android:textSize="@dimen/subtitle_size" />

    <com.axismerchant.custom.CustomTextViewLight
        android:id="@+id/txtProblemCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:text="354231"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitle_size" />

</LinearLayout>